<div class="orders-page">
    <div class="page-header">
        <h1>My Orders</h1>
        <p>Track your order history and current deliveries</p>
        <a href="/dashboard/student" class="back-btn">‚Üê Back to Dashboard</a>
    </div>

    {{#if orders.length}}
    <div class="orders-list">
        {{#each orders}}
        <div class="order-card">
            <div class="order-header">
                <div class="order-info">
                    <h3>Order #{{this.orderNumber}}</h3>
                    <p class="vendor-name">{{this.vendorId.name}}</p>
                </div>
                <div class="order-status">
                    <span class="status-badge status-{{this.status}}">{{this.status}}</span>
                    <span class="order-total">‚Çπ{{this.total}}</span>
                </div>
            </div>

            <div class="order-details">
                <div class="order-items">
                    <h4>Items Ordered:</h4>
                    {{#each this.items}}
                    <div class="order-item">
                        <span class="item-name">{{this.name}} √ó {{this.quantity}}</span>
                        <span class="item-price">‚Çπ{{this.total}}</span>
                    </div>
                    {{/each}}
                </div>

                <div class="order-meta">
                    <p><strong>Ordered:</strong> {{formatDate this.createdAt}}</p>
                    <p><strong>Delivery Address:</strong> {{this.deliveryAddress}}</p>
                    <p><strong>Payment:</strong> {{this.paymentMethod}}</p>
                    {{#if this.notes}}
                    <p><strong>Notes:</strong> {{this.notes}}</p>
                    {{/if}}
                </div>
            </div>

            <div class="order-actions">
                <a href="/orders/track/{{this._id}}" class="track-btn">Track Order</a>
                {{#if (eq this.status 'DELIVERED')}}
                <button class="reorder-btn" onclick="reorderItems('{{this._id}}')">Reorder</button>
                {{/if}}
            </div>
        </div>
        {{/each}}
    </div>
    {{else}}
    <div class="empty-orders">
        <div class="empty-icon">üì¶</div>
        <h3>No orders yet</h3>
        <p>When you place orders, they'll show up here</p>
        <a href="/dashboard/student" class="start-ordering-btn">Start Ordering</a>
    </div>
    {{/if}}
</div>

