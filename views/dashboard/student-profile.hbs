    }

    .cancel-btn:hover {
        background: #cbd5e0;
    }

    .profile-sidebar {
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .quick-actions,
    .security-section {
        background: white;
        border-radius: 16px;
        padding: 20px;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.05);
    }

    .quick-actions h3,
    .security-section h3 {
        font-size: 16px;
        font-weight: 700;
        color: #1a202c;
        margin-bottom: 16px;
    }

    .action-btn {
        display: block;
        width: 100%;
        padding: 12px 16px;
        margin-bottom: 8px;
        background: #f7fafc;
        border: 1px solid #e2e8f0;
        border-radius: 8px;
        text-decoration: none;
        color: #4a5568;
        font-weight: 500;
        transition: all 0.3s ease;
        cursor: pointer;
        text-align: left;
    }

    .action-btn:hover {
        background: #e2e8f0;
        transform: translateY(-1px);
    }

    .action-btn:last-child {
        margin-bottom: 0;
    }

    .action-btn.danger {
        color: #e53e3e;
        border-color: #feb2b2;
    }

    .action-btn.danger:hover {
        background: #fed7d7;
