<div class="vendor-profile-page">
    <div class="page-header">
        <h1>Business Profile</h1>
        <p>Manage your restaurant information and settings</p>
        <a href="/dashboard/vendor" class="back-btn">‚Üê Back to Dashboard</a>
    </div>

    {{#if messages.success}}
    <div class="alert alert-success">{{messages.success}}</div>
    {{/if}}

    {{#if messages.error}}
    <div class="alert alert-error">{{messages.error}}</div>
    {{/if}}

    <div class="profile-container">
        <div class="business-card">
            <div class="business-header">
                <div class="business-avatar">
                    <div class="avatar-circle">
                        {{vendor.name.[0]}}{{vendor.name.[1]}}
                    </div>
                    <div class="status-indicator {{#if vendor.isOnline}}online{{else}}offline{{/if}}"></div>
                </div>
                <div class="business-info">
                    <h2>{{vendor.name}}</h2>
                    <p class="cuisine-tag">{{vendor.cuisine}}</p>
                    <div class="rating-display">
                        <span class="rating">‚≠ê {{vendor.rating}}</span>
                        <span class="delivery-time">üïê {{vendor.deliveryTime}}</span>
                    </div>
                </div>
            </div>

            <form action="/vendor/profile/update" method="POST" class="profile-form">
                <div class="form-section">
                    <h3>Business Information</h3>

                    <div class="form-group">
                        <label for="businessName">Business Name</label>
                        <input type="text" id="businessName" name="name" value="{{vendor.name}}" required>
                    </div>

                    <div class="form-group">
                        <label for="description">Description</label>
                        <textarea id="description" name="description" rows="3"
                            required>{{vendor.description}}</textarea>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label for="cuisine">Cuisine Type</label>
                            <select id="cuisine" name="cuisine" required>
                                <option value="Pizza" {{#if (eq vendor.cuisine 'Pizza' )}}selected{{/if}}>Pizza</option>
                                <option value="Coffee" {{#if (eq vendor.cuisine 'Coffee' )}}selected{{/if}}>Coffee &
                                    Beverages</option>
                                <option value="Indian" {{#if (eq vendor.cuisine 'Indian' )}}selected{{/if}}>Indian
                                </option>
                                <option value="Chinese" {{#if (eq vendor.cuisine 'Chinese' )}}selected{{/if}}>Chinese
                                </option>
                                <option value="Sandwiches" {{#if (eq vendor.cuisine 'Sandwiches' )}}selected{{/if}}>
                                    Sandwiches</option>
                                <option value="Fast Food" {{#if (eq vendor.cuisine 'Fast Food' )}}selected{{/if}}>Fast
                                    Food</option>
                                <option value="Desserts" {{#if (eq vendor.cuisine 'Desserts' )}}selected{{/if}}>Desserts
                                </option>
                                <option value="Healthy" {{#if (eq vendor.cuisine 'Healthy' )}}selected{{/if}}>Healthy
                                </option>
                                <option value="Stationary" {{#if (eq vendor.cuisine 'Stationary' )}}selected{{/if}}>
                                    Stationary</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="deliveryTime">Delivery Time</label>
                            <input type="text" id="deliveryTime" name="deliveryTime" value="{{vendor.deliveryTime}}"
                                placeholder="15-25 min">
                        </div>
                    </div>
                </div>

                <div class="form-section">
                    <h3>Contact Information</h3>

                    <div class="form-group">
                        <label for="ownerName">Owner Name</label>
                        <input type="text" id="ownerName" name="ownerName" value="{{user.name}}" required>
                    </div>

                    <div class="form-group">
                        <label for="email">Email Address</label>
                        <input type="email" id="email" name="email" value="{{user.email}}" disabled>
                        <small class="form-hint">Email cannot be changed</small>
                    </div>

                    <div class="form-group">
                        <label for="mobile">Mobile Number</label>
                        <input type="tel" id="mobile" name="mobile" value="{{user.mobile}}" pattern="[0-9]{10}"
                            required>
                    </div>

                    <div class="form-group">
                        <label for="address">Business Address</label>
                        <textarea id="address" name="address" rows="2" required>{{user.address}}</textarea>
                    </div>
                </div>

                <div class="form-section">
                    <h3>Business Settings</h3>

                    <div class="form-group">
                        <label class="checkbox-label">
                            <input type="checkbox" name="isActive" {{#if vendor.isActive}}checked{{/if}}>
                            <span>Business is active and accepting orders</span>
                        </label>
                    </div>

                    <div class="form-group">
                        <label class="checkbox-label">
                            <input type="checkbox" name="isOnline" {{#if vendor.isOnline}}checked{{/if}}>
                            <span>Currently online and available</span>
                        </label>
                    </div>
                </div>

                <div class="form-actions">
                    <button type="submit" class="save-btn">Save Changes</button>
                    <button type="button" class="cancel-btn" onclick="window.history.back()">Cancel</button>
                </div>
            </form>
        </div>

        <div class="sidebar">
            <div class="stats-card">
                <h3>Business Statistics</h3>
                <div class="stat-item">
                    <span class="stat-label">Total Orders</span>
                    <span class="stat-value">{{stats.totalOrders}}</span>
                </div>
                <div class="stat-item">
                    <span class="stat-label">Rating</span>
                    <span class="stat-value">{{vendor.rating}} ‚≠ê</span>
                </div>
                <div class="stat-item">
                    <span class="stat-label">Revenue</span>
                    <span class="stat-value">‚Çπ{{formatCurrency stats.totalRevenue}}</span>
                </div>
                <div class="stat-item">
                    <span class="stat-label">Menu Items</span>
                    <span class="stat-value">{{stats.menuItemsCount}}</span>
                </div>
            </div>

            <div class="quick-actions-card">
                <h3>Quick Actions</h3>
                <a href="/dashboard/vendor/menu" class="action-link">
                    üçΩÔ∏è Manage Menu
                </a>
                <a href="/dashboard/vendor/orders" class="action-link">
                    üìã View Orders
                </a>
                <a href="/dashboard/vendor/analytics" class="action-link">
                    üìä Analytics
                </a>
                <button class="action-link danger" onclick="showDeleteModal()">
                    üóëÔ∏è Delete Business
                </button>
            </div>

            <div class="hours-card">
                <h3>Business Hours</h3>
                <div class="hours-info">
                    <p>Monday - Friday: 9:00 AM - 10:00 PM</p>
                    <p>Saturday - Sunday: 10:00 AM - 11:00 PM</p>
                    <button class="edit-hours-btn" onclick="editHours()">Edit Hours</button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div id="deleteModal" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <h3>Delete Business</h3>
            <button onclick="closeDeleteModal()" class="close-modal">√ó</button>
        </div>
        <div class="modal-body">
            <p>Are you sure you want to delete your business? This action cannot be undone.</p>
            <p><strong>This will:</strong></p>
            <ul>
                <li>Remove all your menu items</li>
                <li>Cancel all pending orders</li>
                <li>Delete your business profile</li>
                <li>Remove all customer reviews</li>
            </ul>
            <p>Type <strong>DELETE</strong> to confirm:</p>
            <input type="text" id="deleteConfirm" placeholder="Type DELETE">
        </div>
        <div class="modal-actions">
            <button onclick="closeDeleteModal()" class="cancel-btn">Cancel</button>
            <button onclick="confirmDelete()" class="delete-btn" id="confirmDeleteBtn" disabled>Delete Business</button>
        </div>
    </div>
</div>

