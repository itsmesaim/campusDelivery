<div class="track-order-page">
    <div class="page-header">
        <h1>Track Your Order</h1>
        <p>Order #{{order.orderNumber}}</p>
        <a href="/dashboard/student/orders" class="back-btn">‚Üê Back to Orders</a>
    </div>

    <div class="order-tracking-container">
        <div class="order-progress">
            <div class="progress-header">
                <h2>Order Status: {{order.status}}</h2>
                <p class="estimated-time">Estimated delivery: 25-35 minutes</p>
            </div>

            <div class="progress-timeline">
                <div
                    class="progress-step {{#if (eq order.status 'PLACED')}}active{{/if}} {{#if (eq order.status 'CONFIRMED')}}completed{{/if}} {{#if (eq order.status 'PREPARING')}}completed{{/if}} {{#if (eq order.status 'READY')}}completed{{/if}} {{#if (eq order.status 'DELIVERED')}}completed{{/if}}">
                    <div class="step-icon">üìù</div>
                    <div class="step-content">
                        <h3>Order Placed</h3>
                        <p>Your order has been received</p>
                        <span class="step-time">{{formatDate order.createdAt}}</span>
                    </div>
                </div>

                <div
                    class="progress-step {{#if (eq order.status 'CONFIRMED')}}active{{/if}} {{#if (eq order.status 'PREPARING')}}completed{{/if}} {{#if (eq order.status 'READY')}}completed{{/if}} {{#if (eq order.status 'DELIVERED')}}completed{{/if}}">
                    <div class="step-icon">‚úÖ</div>
                    <div class="step-content">
                        <h3>Order Confirmed</h3>
                        <p>Restaurant confirmed your order</p>
                        <span class="step-time">
                            {{#if (eq order.status 'CONFIRMED')}}Just now{{/if}}
                            {{#if (eq order.status 'PREPARING')}}5 minutes ago{{/if}}
                            {{#if (eq order.status 'READY')}}10 minutes ago{{/if}}
                            {{#if (eq order.status 'DELIVERED')}}15 minutes ago{{/if}}
                        </span>
                    </div>
                </div>

                <div
                    class="progress-step {{#if (eq order.status 'PREPARING')}}active{{/if}} {{#if (eq order.status 'READY')}}completed{{/if}} {{#if (eq order.status 'DELIVERED')}}completed{{/if}}">
                    <div class="step-icon">üë®‚Äçüç≥</div>
                    <div class="step-content">
                        <h3>Being Prepared</h3>
                        <p>Your food is being prepared</p>
                        <span class="step-time">
                            {{#if (eq order.status 'PREPARING')}}In progress...{{/if}}
                            {{#if (eq order.status 'READY')}}5 minutes ago{{/if}}
                            {{#if (eq order.status 'DELIVERED')}}10 minutes ago{{/if}}
                        </span>
                    </div>
                </div>

                <div
                    class="progress-step {{#if (eq order.status 'READY')}}active{{/if}} {{#if (eq order.status 'DELIVERED')}}completed{{/if}}">
                    <div class="step-icon">üì¶</div>
                    <div class="step-content">
                        <h3>Ready for Pickup/Delivery</h3>
                        <p>Your order is ready</p>
                        <span class="step-time">
                            {{#if (eq order.status 'READY')}}Ready now!{{/if}}
                            {{#if (eq order.status 'DELIVERED')}}5 minutes ago{{/if}}
                        </span>
                    </div>
                </div>

                <div class="progress-step {{#if (eq order.status 'DELIVERED')}}active completed{{/if}}">
                    <div class="step-icon">üéâ</div>
                    <div class="step-content">
                        <h3>Delivered</h3>
                        <p>Enjoy your meal!</p>
                        <span class="step-time">
                            {{#if (eq order.status 'DELIVERED')}}Delivered!{{/if}}
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <div class="order-details-card">
            <h3>Order Details</h3>

            <div class="restaurant-info">
                <h4>{{order.vendorId.name}}</h4>
                <p class="restaurant-contact">üìû Contact restaurant for updates</p>
            </div>

            <div class="order-items">
                <h4>Items Ordered:</h4>
                {{#each order.items}}
                <div class="order-item">
                    <span class="item-details">{{this.name}} √ó {{this.quantity}}</span>
                    <span class="item-price">‚Çπ{{this.total}}</span>
                </div>
                {{/each}}
            </div>

            <div class="order-summary">
                <div class="summary-row">
                    <span>Subtotal:</span>
                    <span>‚Çπ{{order.subtotal}}</span>
                </div>
                <div class="summary-row">
                    <span>Delivery Fee:</span>
                    <span>‚Çπ{{order.deliveryFee}}</span>
                </div>
                <div class="summary-row total-row">
                    <span>Total:</span>
                    <span>‚Çπ{{order.total}}</span>
                </div>
            </div>

            <div class="delivery-info">
                <h4>Delivery Information:</h4>
                <p><strong>Address:</strong> {{order.deliveryAddress}}</p>
                <p><strong>Phone:</strong> {{order.phone}}</p>
                <p><strong>Payment:</strong> {{order.paymentMethod}}</p>
                {{#if order.notes}}
                <p><strong>Special Instructions:</strong> {{order.notes}}</p>
                {{/if}}
            </div>

            {{#if (eq order.status 'DELIVERED')}}
            <div class="order-actions">
                <button class="reorder-btn" onclick="reorderItems()">Reorder This</button>
                <button class="review-btn" onclick="leaveReview()">Leave Review</button>
            </div>
            {{/if}}
        </div>
    </div>
</div>

<style>
    .track-order-page {
        max-width: 1000px;
        margin: 0 auto;
        padding: 20px;
    }

    .page-header {
        background: white;
        padding: 24px;
        border-radius: 16px;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.05);
        margin-bottom: 24px;
        text-align: center;
    }

    .page-header h1 {
        font-size: 28px;
        font-weight: 700;
        color: #1a202c;
        margin-bottom: 8px;
    }

    .page-header p {
        color: #667eea;
        font-weight: 600;
        font-size: 18px;
        margin-bottom: 16px;
    }

    .back-btn {
        display: inline-block;
        background: #667eea;
        color: white;
        padding: 8px 16px;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .back-btn:hover {
        background: #5a67d8;
        transform: translateY(-1px);
    }

    .order-tracking-container {
        display: grid;
        grid-template-columns: 2fr 1fr;
        gap: 24px;
    }

    .order-progress {
        background: white;
        border-radius: 16px;
        padding: 24px;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.05);
    }

    .progress-header {
        text-align: center;
        margin-bottom: 32px;
        padding-bottom: 20px;
        border-bottom: 1px solid #e2e8f0;
    }

    .progress-header h2 {
        font-size: 24px;
        font-weight: 700;
        color: #1a202c;
        margin-bottom: 8px;
    }

    .estimated-time {
        color: #38a169;
        font-weight: 600;
    }

    .progress-timeline {
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .progress-step {
        display: flex;
        align-items: flex-start;
        gap: 16px;
        padding: 16px;
        border-radius: 12px;
        transition: all 0.3s ease;
        position: relative;
    }

    .progress-step:not(:last-child)::after {
        content: '';
        position: absolute;
        left: 31px;
        top: 64px;
        width: 2px;
        height: 40px;
        background: #e2e8f0;
    }

    .progress-step.completed::after {
        background: #38a169;
    }

    .progress-step.active {
        background: #f0fff4;
        border: 2px solid #38a169;
    }

    .progress-step.completed {
        background: #f8f9fa;
    }

    .step-icon {
        width: 48px;
        height: 48px;
        border-radius: 50%;
        background: #e2e8f0;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 20px;
        flex-shrink: 0;
        transition: all 0.3s ease;
    }

    .progress-step.active .step-icon {
        background: #38a169;
        color: white;
        animation: pulse 2s infinite;
    }

    .progress-step.completed .step-icon {
        background: #c6f6d5;
    }

    @keyframes pulse {
        0% {
            transform: scale(1);
        }

        50% {
            transform: scale(1.1);
        }

        100% {
            transform: scale(1);
        }
    }

    .step-content h3 {
        font-size: 16px;
        font-weight: 700;
        color: #1a202c;
        margin-bottom: 4px;
    }

    .step-content p {
        color: #4a5568;
        font-size: 14px;
        margin-bottom: 4px;
    }

    .step-time {
        color: #667eea;
        font-size: 12px;
        font-weight: 500;
    }

    .order-details-card {
        background: white;
        border-radius: 16px;
        padding: 24px;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.05);
        height: fit-content;
    }

    .order-details-card h3 {
        font-size: 20px;
        font-weight: 700;
        color: #1a202c;
        margin-bottom: 20px;
        padding-bottom: 12px;
        border-bottom: 1px solid #e2e8f0;
    }

    .restaurant-info {
        margin-bottom: 24px;
    }

    .restaurant-info h4 {
        font-size: 18px;
        font-weight: 700;
        color: #1a202c;
        margin-bottom: 4px;
    }

    .restaurant-contact {
        color: #667eea;
        font-size: 14px;
    }

    .order-items,
    .delivery-info {
        margin-bottom: 24px;
    }

    .order-items h4,
    .delivery-info h4 {
        font-size: 14px;
        font-weight: 700;
        color: #4a5568;
        margin-bottom: 12px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .order-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 8px 0;
        border-bottom: 1px solid #f7fafc;
    }

    .order-item:last-child {
        border-bottom: none;
    }

    .item-details {
        color: #1a202c;
        font-weight: 500;
    }

    .item-price {
        color: #667eea;
        font-weight: 600;
    }

    .order-summary {
        padding: 16px;
        background: #f7fafc;
        border-radius: 8px;
        margin-bottom: 24px;
    }

    .summary-row {
        display: flex;
        justify-content: space-between;
        margin-bottom: 8px;
        font-size: 14px;
    }

    .total-row {
        font-weight: 700;
        font-size: 16px;
        color: #1a202c;
        border-top: 1px solid #e2e8f0;
        padding-top: 8px;
        margin-top: 8px;
    }

    .delivery-info p {
        margin-bottom: 8px;
        font-size: 14px;
        color: #4a5568;
    }

    .order-actions {
        display: flex;
        gap: 12px;
        margin-top: 20px;
    }

    .reorder-btn,
    .review-btn {
        flex: 1;
        padding: 12px;
        border: none;
        border-radius: 8px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .reorder-btn {
        background: #38a169;
        color: white;
    }

    .reorder-btn:hover {
        background: #2f855a;
    }

    .review-btn {
        background: #667eea;
        color: white;
    }

    .review-btn:hover {
        background: #5a67d8;
    }

    @media (max-width: 768px) {
        .track-order-page {
            padding: 12px;
        }

        .order-tracking-container {
            grid-template-columns: 1fr;
            gap: 16px;
        }

        .progress-step {
            flex-direction: column;
            text-align: center;
            gap: 8px;
        }

        .progress-step:not(:last-child)::after {
            display: none;
        }

        .order-actions {
            flex-direction: column;
        }
    }
</style>

