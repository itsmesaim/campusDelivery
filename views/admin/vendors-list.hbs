<div class="admin-container">
    <div class="page-header">
        <h1>Manage Vendors</h1>
        <a href="/admin/vendors/new" class="btn-primary">+ Add New Vendor</a>
    </div>

    {{#if vendors}}
    <div class="vendors-grid">
        {{#each vendors}}
        <div class="vendor-card">
            <div class="vendor-header">
                <div class="vendor-info">
                    <h3>{{this.name}}</h3>
                    <p class="vendor-cuisine">{{this.cuisine}}</p>
                    <p class="vendor-description">{{this.description}}</p>
                </div>
                <div class="vendor-status">
                    {{#if this.isActive}}
                    <span class="status active">Active</span>
                    {{else}}
                    <span class="status inactive">Inactive</span>
                    {{/if}}
                    {{#if this.isOnline}}
                    <span class="status online">Online</span>
                    {{else}}
                    <span class="status offline">Offline</span>
                    {{/if}}
                </div>
            </div>

            <div class="vendor-details">
                <div class="detail-item">
                    <strong>Rating:</strong> ‚≠ê {{this.rating}}
                </div>
                <div class="detail-item">
                    <strong>Delivery Time:</strong> {{this.deliveryTime}}
                </div>
                <div class="detail-item">
                    <strong>Created:</strong> {{formatDate this.createdAt}}
                </div>
            </div>

            <div class="vendor-actions">
                <form action="/admin/vendors/{{this._id}}/toggle" method="POST" style="display: inline;">
                    {{#if this.isActive}}
                    <button type="submit" class="btn-danger">Deactivate</button>
                    {{else}}
                    <button type="submit" class="btn-success">Activate</button>
                    {{/if}}
                </form>
                <a href="/vendor/menu?vendorId={{this._id}}" class="btn-secondary">View Menu</a>
            </div>
        </div>
        {{/each}}
    </div>
    {{else}}
    <div class="empty-state">
        <div class="empty-icon">üè™</div>
        <h3>No vendors yet</h3>
        <p>Create your first vendor to get started</p>
        <a href="/admin/vendors/new" class="btn-primary">Create First Vendor</a>
    </div>
    {{/if}}
</div>

